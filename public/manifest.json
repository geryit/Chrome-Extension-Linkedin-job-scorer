{
  "name": "Linkedin CV Scorer",
  "description": "Enhance your job search by seamlessly comparing LinkedIn job descriptions with your CV to ensure the perfect match.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "48": "logo-48p.png",
    "128": "logo-128p.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*?currentJobId=*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
